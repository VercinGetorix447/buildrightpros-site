---
import Layout from '../layouts/Layout.astro';
---

<Layout title="BuildRightPros - Grow Your Contracting Business">

  <!-- ============================================
       SECTION 1: HERO (Compact - 50vh)
       - 1.1 Headline
       - 1.2 Subheadline
       - 1.3 CTA Buttons
       - 1.4 Hero Image
       ============================================ -->
  <section id="hero" data-section="1" class="h-[50vh] min-h-[400px] flex items-center bg-gray-100">
    <div class="max-w-6xl mx-auto px-4 py-12">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <!-- 1.1 Headline -->
          <h1 data-section="1.1" class="text-4xl md:text-5xl font-heading font-bold mb-4 text-gray-900">Grow Your Contracting Business</h1>
          <!-- 1.2 Subheadline -->
          <p data-section="1.2" class="text-lg md:text-xl mb-6 text-gray-600">Websites, Leads, and AI-Powered Calling Solutions for Plumbers, Electricians, HVAC, Roofers & More</p>
          <!-- 1.3 CTA Buttons -->
          <div data-section="1.3" class="flex flex-col sm:flex-row gap-3">
            <a href="#pricing" class="bg-primary text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition text-center">View Pricing</a>
            <a href="#contact" class="border-2 border-gray-900 px-6 py-3 rounded-lg font-semibold hover:bg-gray-900 hover:text-white transition text-center">Book a Call</a>
          </div>
        </div>
        <!-- 1.4 Hero Image (NO border) -->
        <div data-section="1.4" class="hidden md:block">
          <div class="rounded-xl overflow-hidden shadow-lg">
            <img src="https://images.unsplash.com/photo-1504307651254-35680f356dfd?w=800&h=500&fit=crop" alt="Contractor at work" class="w-full h-auto">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 2: WEBSITES (Text LEFT, Image RIGHT)
       - 2.1 Label
       - 2.2 Title
       - 2.3 Description
       - 2.4 Features List
       - 2.5 Image
       ============================================ -->
  <section id="services" data-section="2" class="py-20 bg-gray-200">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Text Box LEFT (WITH border) -->
        <div data-section="2.0" class="bg-white border border-gray-900 rounded-xl p-8">
          <!-- 2.1 Label -->
          <span data-section="2.1" class="text-sm font-semibold text-primary uppercase tracking-wide">Websites</span>
          <!-- 2.2 Title -->
          <h2 data-section="2.2" class="text-3xl font-heading font-bold mt-2 mb-4">Professional Sites That Convert</h2>
          <!-- 2.3 Description -->
          <p data-section="2.3" class="text-gray-600 mb-6">Custom-built websites designed specifically for contractors. Mobile-optimized, SEO-ready, and built to turn visitors into paying customers.</p>
          <!-- 2.4 Features -->
          <ul data-section="2.4" class="space-y-3 text-gray-700">
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Trade-specific templates (plumber, HVAC, roofer, etc.)</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Mobile-first responsive design</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Built-in contact forms & booking</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Lightning-fast load times</li>
          </ul>
        </div>
        <!-- Image RIGHT (NO border) -->
        <div data-section="2.5" class="rounded-xl overflow-hidden shadow-lg">
          <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&h=500&fit=crop" alt="Website on laptop" class="w-full h-auto">
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 3: LEADS (Image LEFT, Text RIGHT)
       - 3.1 Label
       - 3.2 Title
       - 3.3 Description
       - 3.4 Stats
       - 3.5 Image
       ============================================ -->
  <section id="leads" data-section="3" class="py-20 bg-gray-100">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Image LEFT (NO border) -->
        <div data-section="3.5" class="rounded-xl overflow-hidden shadow-lg order-2 md:order-1">
          <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=500&fit=crop" alt="Lead generation dashboard" class="w-full h-auto">
        </div>
        <!-- Text Box RIGHT (WITH border) -->
        <div data-section="3.0" class="bg-white border border-gray-900 rounded-xl p-8 order-1 md:order-2">
          <!-- 3.1 Label -->
          <span data-section="3.1" class="text-sm font-semibold text-secondary uppercase tracking-wide">Lead Generation</span>
          <!-- 3.2 Title -->
          <h2 data-section="3.2" class="text-3xl font-heading font-bold mt-2 mb-4">Qualified Leads Delivered Daily</h2>
          <!-- 3.3 Description -->
          <p data-section="3.3" class="text-gray-600 mb-6">Stop chasing cold calls. We find and qualify prospects in your service area who are actively looking for contractors like you.</p>
          <!-- 3.4 Stats -->
          <div data-section="3.4" class="grid grid-cols-2 gap-4">
            <div class="text-center p-3 bg-gray-50 rounded-lg">
              <p class="text-2xl font-bold text-primary">500+</p>
              <p class="text-sm text-gray-600">Leads Delivered</p>
            </div>
            <div class="text-center p-3 bg-gray-50 rounded-lg">
              <p class="text-2xl font-bold text-primary">89%</p>
              <p class="text-sm text-gray-600">Contact Rate</p>
            </div>
            <div class="text-center p-3 bg-gray-50 rounded-lg">
              <p class="text-2xl font-bold text-primary">24hr</p>
              <p class="text-sm text-gray-600">Delivery Time</p>
            </div>
            <div class="text-center p-3 bg-gray-50 rounded-lg">
              <p class="text-2xl font-bold text-primary">5x</p>
              <p class="text-sm text-gray-600">Avg ROI</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 4: AI CALLERS (Text LEFT, Image RIGHT)
       - 4.1 Label
       - 4.2 Title
       - 4.3 Description
       - 4.4 Features List
       - 4.5 Image
       ============================================ -->
  <section id="callers" data-section="4" class="py-20 bg-gray-200">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Text Box LEFT (WITH border) -->
        <div data-section="4.0" class="bg-white border border-gray-900 rounded-xl p-8">
          <!-- 4.1 Label -->
          <span data-section="4.1" class="text-sm font-semibold text-primary uppercase tracking-wide">AI Callers</span>
          <!-- 4.2 Title -->
          <h2 data-section="4.2" class="text-3xl font-heading font-bold mt-2 mb-4">Never Miss a Lead Again</h2>
          <!-- 4.3 Description -->
          <p data-section="4.3" class="text-gray-600 mb-6">Our AI-powered callers work 24/7 to follow up on leads, book appointments, and answer questions—so you can focus on the job.</p>
          <!-- 4.4 Features -->
          <ul data-section="4.4" class="space-y-3 text-gray-700">
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Instant follow-up within minutes</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Books appointments on your calendar</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Natural-sounding conversations</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Full call recordings & transcripts</li>
          </ul>
        </div>
        <!-- Image RIGHT (NO border) -->
        <div data-section="4.5" class="rounded-xl overflow-hidden shadow-lg">
          <img src="https://images.unsplash.com/photo-1556745753-b2904692b3cd?w=800&h=500&fit=crop" alt="AI phone assistant" class="w-full h-auto">
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 5: CRM & ANALYTICS (Image LEFT, Text RIGHT)
       - 5.1 Label
       - 5.2 Title
       - 5.3 Description
       - 5.4 Features List
       - 5.5 Image
       ============================================ -->
  <section data-section="5" class="py-20 bg-gray-100">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Image LEFT (NO border) -->
        <div data-section="5.5" class="rounded-xl overflow-hidden shadow-lg order-2 md:order-1">
          <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=500&fit=crop" alt="Analytics dashboard" class="w-full h-auto">
        </div>
        <!-- Text Box RIGHT (WITH border) -->
        <div data-section="5.0" class="bg-white border border-gray-900 rounded-xl p-8 order-1 md:order-2">
          <!-- 5.1 Label -->
          <span data-section="5.1" class="text-sm font-semibold text-secondary uppercase tracking-wide">CRM & Analytics</span>
          <!-- 5.2 Title -->
          <h2 data-section="5.2" class="text-3xl font-heading font-bold mt-2 mb-4">Track Everything in One Place</h2>
          <!-- 5.3 Description -->
          <p data-section="5.3" class="text-gray-600 mb-6">See every lead, every call, every conversion. Our integrated dashboard gives you full visibility into your sales pipeline.</p>
          <!-- 5.4 Features -->
          <ul data-section="5.4" class="space-y-3 text-gray-700">
            <li class="flex items-start gap-2"><span class="text-secondary font-bold">✓</span> Real-time lead tracking</li>
            <li class="flex items-start gap-2"><span class="text-secondary font-bold">✓</span> Conversion analytics</li>
            <li class="flex items-start gap-2"><span class="text-secondary font-bold">✓</span> Call history & recordings</li>
            <li class="flex items-start gap-2"><span class="text-secondary font-bold">✓</span> ROI reporting</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 6: PRICING (4 Tiers)
       - 6.1 Section Title
       - 6.2 Subtitle
       - 6.3 Tier: STARTER
       - 6.4 Tier: CONTRACTOR
       - 6.5 Tier: BRANDING
       - 6.6 Tier: SCALE
       - 6.7 Add-on Note
       ============================================ -->
  <section id="pricing" data-section="6" class="py-20 bg-gray-200">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 6.1 Section Title -->
      <h2 data-section="6.1" class="text-4xl font-heading font-bold text-center mb-2">Simple, Transparent Pricing</h2>
      <!-- 6.2 Subtitle -->
      <p data-section="6.2" class="text-center text-gray-600 mb-12">No hidden fees. Cancel anytime.</p>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- 6.3 Tier: STARTER -->
        <div data-section="6.3" class="bg-white border border-gray-900 rounded-xl p-6">
          <div class="rounded-lg overflow-hidden mb-4">
            <img src="https://images.unsplash.com/photo-1504307651254-35680f356dfd?w=400&h=200&fit=crop" alt="Starter" class="w-full h-32 object-cover">
          </div>
          <h3 class="text-xl font-bold mb-1">STARTER</h3>
          <p class="text-gray-500 text-sm mb-3 italic">in the game</p>
          <p class="text-3xl font-bold text-primary mb-4">$297</p>
          <ul class="space-y-2 mb-6 text-sm text-gray-700">
            <li>✓ 3 Page Website</li>
            <li>✓ Mobile Responsive</li>
            <li>✓ Contact Form</li>
            <li>✓ Basic SEO</li>
          </ul>
          <a href="#contact" class="block text-center bg-gray-900 text-white py-2 rounded-lg hover:bg-gray-700 transition text-sm">Get Started</a>
        </div>
        <!-- 6.4 Tier: CONTRACTOR -->
        <div data-section="6.4" class="bg-white border border-gray-900 rounded-xl p-6">
          <div class="rounded-lg overflow-hidden mb-4">
            <img src="https://images.unsplash.com/photo-1581578731548-c64695cc6952?w=400&h=200&fit=crop" alt="Contractor" class="w-full h-32 object-cover">
          </div>
          <h3 class="text-xl font-bold mb-1">CONTRACTOR</h3>
          <p class="text-gray-500 text-sm mb-3 italic">efficient contractor</p>
          <p class="text-3xl font-bold text-primary mb-4">$497</p>
          <ul class="space-y-2 mb-6 text-sm text-gray-700">
            <li>✓ 6 Page Website</li>
            <li>✓ CRM Integration</li>
            <li>✓ 25 Leads/month</li>
            <li>✓ Basic Analytics</li>
          </ul>
          <a href="#contact" class="block text-center bg-gray-900 text-white py-2 rounded-lg hover:bg-gray-700 transition text-sm">Get Started</a>
        </div>
        <!-- 6.5 Tier: BRANDING (Popular) -->
        <div data-section="6.5" class="bg-white border-2 border-primary rounded-xl p-6 shadow-xl relative">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-secondary text-white text-xs px-3 py-1 rounded-full">Most Popular</div>
          <div class="rounded-lg overflow-hidden mb-4">
            <img src="https://images.unsplash.com/photo-1557804506-669a67965ba0?w=400&h=200&fit=crop" alt="Branding" class="w-full h-32 object-cover">
          </div>
          <h3 class="text-xl font-bold mb-1">BRANDING</h3>
          <p class="text-gray-500 text-sm mb-3 italic">growing funnels</p>
          <p class="text-3xl font-bold text-primary mb-4">$797</p>
          <ul class="space-y-2 mb-6 text-sm text-gray-700">
            <li>✓ 10 Page Website</li>
            <li>✓ AI Caller Setup</li>
            <li>✓ 50 Leads/month</li>
            <li>✓ Full Analytics</li>
            <li>✓ Social Media Kit</li>
          </ul>
          <a href="#contact" class="block text-center bg-primary text-white py-2 rounded-lg hover:bg-blue-700 transition text-sm">Get Started</a>
        </div>
        <!-- 6.6 Tier: SCALE -->
        <div data-section="6.6" class="bg-white border border-gray-900 rounded-xl p-6">
          <div class="rounded-lg overflow-hidden mb-4">
            <img src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=400&h=200&fit=crop" alt="Scale" class="w-full h-32 object-cover">
          </div>
          <h3 class="text-xl font-bold mb-1">SCALE</h3>
          <p class="text-gray-500 text-sm mb-3 italic">funnel domination</p>
          <p class="text-3xl font-bold text-primary mb-4">$1,497</p>
          <ul class="space-y-2 mb-6 text-sm text-gray-700">
            <li>✓ Unlimited Pages</li>
            <li>✓ Dedicated AI Callers</li>
            <li>✓ 200+ Leads/month</li>
            <li>✓ White-label Options</li>
            <li>✓ Priority Support</li>
          </ul>
          <a href="#contact" class="block text-center bg-gray-900 text-white py-2 rounded-lg hover:bg-gray-700 transition text-sm">Contact Us</a>
        </div>
      </div>
      <!-- 6.7 Add-on Note -->
      <p data-section="6.7" class="text-center text-gray-500 mt-8">Add-on pages: +$69 each | Custom integrations available</p>
    </div>
  </section>

  <!-- ============================================
       SECTION 7: CUSTOMER STORIES (Blog-style Cards)
       - 7.1 Section Title
       - 7.2 Story Card 1
       - 7.3 Story Card 2
       - 7.4 Story Card 3
       - 7.5 Story Card 4
       ============================================ -->
  <section data-section="7" class="py-20 bg-gray-100">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 7.1 Section Title -->
      <h2 data-section="7.1" class="text-4xl font-heading font-bold text-center mb-12">Customer Stories</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- 7.2 Story Card 1 -->
        <div data-section="7.2" class="bg-white border border-gray-900 rounded-xl overflow-hidden hover:shadow-lg transition">
          <img src="https://images.unsplash.com/photo-1621905252507-b35492cc74b4?w=400&h=300&fit=crop" alt="Plumber" class="w-full h-40 object-cover">
          <div class="p-4">
            <p class="text-sm text-primary font-semibold mb-1">Plumbing</p>
            <h3 class="font-bold text-gray-900">Mike's Plumbing Co.</h3>
            <p class="text-gray-600 text-sm mt-2">"Doubled our leads in 30 days"</p>
          </div>
        </div>
        <!-- 7.3 Story Card 2 -->
        <div data-section="7.3" class="bg-white border border-gray-900 rounded-xl overflow-hidden hover:shadow-lg transition">
          <img src="https://images.unsplash.com/photo-1585771724684-38269d6639fd?w=400&h=300&fit=crop" alt="HVAC" class="w-full h-40 object-cover">
          <div class="p-4">
            <p class="text-sm text-primary font-semibold mb-1">HVAC</p>
            <h3 class="font-bold text-gray-900">CoolAir Solutions</h3>
            <p class="text-gray-600 text-sm mt-2">"AI caller books 15+ appointments weekly"</p>
          </div>
        </div>
        <!-- 7.4 Story Card 3 -->
        <div data-section="7.4" class="bg-white border border-gray-900 rounded-xl overflow-hidden hover:shadow-lg transition">
          <img src="https://images.unsplash.com/photo-1632759145354-c7cf87215e56?w=400&h=300&fit=crop" alt="Roofing" class="w-full h-40 object-cover">
          <div class="p-4">
            <p class="text-sm text-secondary font-semibold mb-1">Roofing</p>
            <h3 class="font-bold text-gray-900">TopShield Roofing</h3>
            <p class="text-gray-600 text-sm mt-2">"Best ROI we've ever seen on marketing"</p>
          </div>
        </div>
        <!-- 7.5 Story Card 4 -->
        <div data-section="7.5" class="bg-white border border-gray-900 rounded-xl overflow-hidden hover:shadow-lg transition">
          <img src="https://images.unsplash.com/photo-1621905251189-08b45d6a269e?w=400&h=300&fit=crop" alt="Electrician" class="w-full h-40 object-cover">
          <div class="p-4">
            <p class="text-sm text-primary font-semibold mb-1">Electrical</p>
            <h3 class="font-bold text-gray-900">Bright Spark Electric</h3>
            <p class="text-gray-600 text-sm mt-2">"Website brings in 20 calls per week"</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 8: BLOG (Clerk.io customers + Mailbakery sidebar)
       - 8.1 Section Title
       - 8.2 Blog Post Grid (Left - 2/3 width)
       - 8.3 Sidebar (Right - 1/3 width)
         - 8.3a Search
         - 8.3b Categories
         - 8.3c Newsletter
         - 8.3d CTA
       ============================================ -->
  <section id="blog" data-section="8" class="py-20 bg-gray-200">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 8.1 Section Title -->
      <h2 data-section="8.1" class="text-4xl font-heading font-bold text-center mb-12">Resources & Insights</h2>

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- 8.2 Blog Posts Grid (Left 2/3) -->
        <div data-section="8.2" class="lg:col-span-2 space-y-6">
          <!-- Blog Card 1 -->
          <div class="bg-white border border-gray-900 rounded-xl overflow-hidden flex flex-col md:flex-row">
            <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=400&h=250&fit=crop" alt="Blog post" class="w-full md:w-48 h-48 md:h-auto object-cover">
            <div class="p-6 flex-1">
              <span class="text-xs text-primary font-semibold uppercase">Guide</span>
              <h3 class="text-xl font-bold mt-1 mb-2">5 Ways to Get More Leads as a Contractor</h3>
              <p class="text-gray-600 text-sm mb-3">Learn proven strategies to attract more qualified leads without spending a fortune on ads.</p>
              <a href="#" class="text-primary font-semibold text-sm hover:underline">Read More →</a>
            </div>
          </div>
          <!-- Blog Card 2 -->
          <div class="bg-white border border-gray-900 rounded-xl overflow-hidden flex flex-col md:flex-row">
            <img src="https://images.unsplash.com/photo-1553877522-43269d4ea984?w=400&h=250&fit=crop" alt="Blog post" class="w-full md:w-48 h-48 md:h-auto object-cover">
            <div class="p-6 flex-1">
              <span class="text-xs text-secondary font-semibold uppercase">Case Study</span>
              <h3 class="text-xl font-bold mt-1 mb-2">How CoolAir HVAC 3x'd Their Bookings</h3>
              <p class="text-gray-600 text-sm mb-3">See how one HVAC company used AI callers to transform their lead follow-up process.</p>
              <a href="#" class="text-primary font-semibold text-sm hover:underline">Read More →</a>
            </div>
          </div>
          <!-- Blog Card 3 -->
          <div class="bg-white border border-gray-900 rounded-xl overflow-hidden flex flex-col md:flex-row">
            <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=400&h=250&fit=crop" alt="Blog post" class="w-full md:w-48 h-48 md:h-auto object-cover">
            <div class="p-6 flex-1">
              <span class="text-xs text-primary font-semibold uppercase">Tutorial</span>
              <h3 class="text-xl font-bold mt-1 mb-2">Building Your Contractor Website: Complete Guide</h3>
              <p class="text-gray-600 text-sm mb-3">Everything you need to know about creating a high-converting contractor website.</p>
              <a href="#" class="text-primary font-semibold text-sm hover:underline">Read More →</a>
            </div>
          </div>
          <!-- Blog Card 4 -->
          <div class="bg-white border border-gray-900 rounded-xl overflow-hidden flex flex-col md:flex-row">
            <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=400&h=250&fit=crop" alt="Blog post" class="w-full md:w-48 h-48 md:h-auto object-cover">
            <div class="p-6 flex-1">
              <span class="text-xs text-secondary font-semibold uppercase">Industry News</span>
              <h3 class="text-xl font-bold mt-1 mb-2">2024 Contractor Marketing Trends</h3>
              <p class="text-gray-600 text-sm mb-3">What's working now in contractor marketing and what to expect in the coming year.</p>
              <a href="#" class="text-primary font-semibold text-sm hover:underline">Read More →</a>
            </div>
          </div>
        </div>

        <!-- 8.3 Sidebar (Right 1/3) -->
        <div data-section="8.3" class="space-y-6">
          <!-- 8.3a Search -->
          <div data-section="8.3a" class="bg-white border border-gray-900 rounded-xl p-5">
            <h4 class="font-bold mb-3">Search</h4>
            <input type="text" placeholder="Search articles..." class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none text-sm">
          </div>

          <!-- 8.3b Categories -->
          <div data-section="8.3b" class="bg-white border border-gray-900 rounded-xl p-5">
            <h4 class="font-bold mb-3">Categories</h4>
            <ul class="space-y-2 text-sm">
              <li class="flex justify-between"><a href="#" class="hover:text-primary">Guides & Tutorials</a><span class="text-gray-400">(12)</span></li>
              <li class="flex justify-between"><a href="#" class="hover:text-primary">Case Studies</a><span class="text-gray-400">(8)</span></li>
              <li class="flex justify-between"><a href="#" class="hover:text-primary">Industry News</a><span class="text-gray-400">(15)</span></li>
              <li class="flex justify-between"><a href="#" class="hover:text-primary">Tips & Tricks</a><span class="text-gray-400">(22)</span></li>
