---
import Layout from '../layouts/Layout.astro';
---

<Layout title="BuildRightPros - Grow Your Contracting Business">

  <!-- ============================================
       SECTION 1: HERO (Compact - 50vh)
       - 1.1 Headline
       - 1.2 Subheadline
       - 1.3 CTA Buttons
       ============================================ -->
  <section id="hero" data-section="1" class="h-[50vh] min-h-[400px] flex items-center bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 py-12">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <!-- 1.1 Headline -->
          <h1 data-section="1.1" class="text-4xl md:text-5xl font-heading font-bold mb-4 text-gray-900">Grow Your Contracting Business</h1>
          <!-- 1.2 Subheadline -->
          <p data-section="1.2" class="text-lg md:text-xl mb-6 text-gray-600">Websites, Leads, and AI-Powered Calling Solutions for Plumbers, Electricians, HVAC, Roofers & More</p>
          <!-- 1.3 CTA Buttons -->
          <div data-section="1.3" class="flex flex-col sm:flex-row gap-3">
            <a href="#pricing" class="bg-primary text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition text-center">View Pricing</a>
            <a href="#contact" class="border-2 border-gray-900 px-6 py-3 rounded-lg font-semibold hover:bg-gray-900 hover:text-white transition text-center">Book a Call</a>
          </div>
        </div>
        <!-- 1.4 Hero Image -->
        <div data-section="1.4" class="hidden md:block">
          <div class="bg-white border border-gray-900 rounded-xl p-6 shadow-lg">
            <div class="bg-gray-100 rounded-lg aspect-video flex items-center justify-center">
              <p class="text-gray-400">[Hero Image - Dashboard Preview]</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 2: WEBSITES (Text LEFT, Image RIGHT)
       - 2.1 Label
       - 2.2 Title
       - 2.3 Description
       - 2.4 Features List
       - 2.5 Image
       ============================================ -->
  <section id="services" data-section="2" class="py-20 bg-gray-100">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Text Box LEFT -->
        <div data-section="2.0" class="bg-white border border-gray-900 rounded-xl p-8">
          <!-- 2.1 Label -->
          <span data-section="2.1" class="text-sm font-semibold text-primary uppercase tracking-wide">Websites</span>
          <!-- 2.2 Title -->
          <h2 data-section="2.2" class="text-3xl font-heading font-bold mt-2 mb-4">Professional Sites That Convert</h2>
          <!-- 2.3 Description -->
          <p data-section="2.3" class="text-gray-600 mb-6">Custom-built websites designed specifically for contractors. Mobile-optimized, SEO-ready, and built to turn visitors into paying customers.</p>
          <!-- 2.4 Features -->
          <ul data-section="2.4" class="space-y-3 text-gray-700">
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Trade-specific templates (plumber, HVAC, roofer, etc.)</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Mobile-first responsive design</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Built-in contact forms & booking</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Lightning-fast load times</li>
          </ul>
        </div>
        <!-- Image RIGHT -->
        <div data-section="2.5" class="bg-white border border-gray-900 rounded-xl p-4">
          <div class="bg-gray-50 rounded-lg aspect-video flex items-center justify-center">
            <p class="text-gray-400">[Website Mockup Image]</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 3: LEADS (Image LEFT, Text RIGHT)
       - 3.1 Label
       - 3.2 Title
       - 3.3 Description
       - 3.4 Stats
       - 3.5 Image
       ============================================ -->
  <section id="leads" data-section="3" class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Image LEFT -->
        <div data-section="3.5" class="bg-white border border-gray-900 rounded-xl p-4 order-2 md:order-1">
          <div class="bg-gray-50 rounded-lg aspect-video flex items-center justify-center">
            <p class="text-gray-400">[Lead Generation Dashboard]</p>
          </div>
        </div>
        <!-- Text Box RIGHT -->
        <div data-section="3.0" class="bg-white border border-gray-900 rounded-xl p-8 order-1 md:order-2">
          <!-- 3.1 Label -->
          <span data-section="3.1" class="text-sm font-semibold text-secondary uppercase tracking-wide">Lead Generation</span>
          <!-- 3.2 Title -->
          <h2 data-section="3.2" class="text-3xl font-heading font-bold mt-2 mb-4">Qualified Leads Delivered Daily</h2>
          <!-- 3.3 Description -->
          <p data-section="3.3" class="text-gray-600 mb-6">Stop chasing cold calls. We find and qualify prospects in your service area who are actively looking for contractors like you.</p>
          <!-- 3.4 Stats -->
          <div data-section="3.4" class="grid grid-cols-2 gap-4">
            <div class="text-center p-3 bg-gray-50 rounded-lg">
              <p class="text-2xl font-bold text-primary">500+</p>
              <p class="text-sm text-gray-600">Leads Delivered</p>
            </div>
            <div class="text-center p-3 bg-gray-50 rounded-lg">
              <p class="text-2xl font-bold text-primary">89%</p>
              <p class="text-sm text-gray-600">Contact Rate</p>
            </div>
            <div class="text-center p-3 bg-gray-50 rounded-lg">
              <p class="text-2xl font-bold text-primary">24hr</p>
              <p class="text-sm text-gray-600">Delivery Time</p>
            </div>
            <div class="text-center p-3 bg-gray-50 rounded-lg">
              <p class="text-2xl font-bold text-primary">5x</p>
              <p class="text-sm text-gray-600">Avg ROI</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 4: AI CALLERS (Text LEFT, Image RIGHT)
       - 4.1 Label
       - 4.2 Title
       - 4.3 Description
       - 4.4 Features List
       - 4.5 Image
       ============================================ -->
  <section id="callers" data-section="4" class="py-20 bg-gray-100">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Text Box LEFT -->
        <div data-section="4.0" class="bg-white border border-gray-900 rounded-xl p-8">
          <!-- 4.1 Label -->
          <span data-section="4.1" class="text-sm font-semibold text-primary uppercase tracking-wide">AI Callers</span>
          <!-- 4.2 Title -->
          <h2 data-section="4.2" class="text-3xl font-heading font-bold mt-2 mb-4">Never Miss a Lead Again</h2>
          <!-- 4.3 Description -->
          <p data-section="4.3" class="text-gray-600 mb-6">Our AI-powered callers work 24/7 to follow up on leads, book appointments, and answer questions—so you can focus on the job.</p>
          <!-- 4.4 Features -->
          <ul data-section="4.4" class="space-y-3 text-gray-700">
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Instant follow-up within minutes</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Books appointments on your calendar</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Natural-sounding conversations</li>
            <li class="flex items-start gap-2"><span class="text-primary font-bold">✓</span> Full call recordings & transcripts</li>
          </ul>
        </div>
        <!-- Image RIGHT -->
        <div data-section="4.5" class="bg-white border border-gray-900 rounded-xl p-4">
          <div class="bg-gray-50 rounded-lg aspect-video flex items-center justify-center">
            <p class="text-gray-400">[AI Caller Interface]</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 5: CRM & ANALYTICS (Image LEFT, Text RIGHT)
       - 5.1 Label
       - 5.2 Title
       - 5.3 Description
       - 5.4 Features List
       - 5.5 Image
       ============================================ -->
  <section data-section="5" class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Image LEFT -->
        <div data-section="5.5" class="bg-white border border-gray-900 rounded-xl p-4 order-2 md:order-1">
          <div class="bg-gray-50 rounded-lg aspect-video flex items-center justify-center">
            <p class="text-gray-400">[CRM Dashboard Screenshot]</p>
          </div>
        </div>
        <!-- Text Box RIGHT -->
        <div data-section="5.0" class="bg-white border border-gray-900 rounded-xl p-8 order-1 md:order-2">
          <!-- 5.1 Label -->
          <span data-section="5.1" class="text-sm font-semibold text-secondary uppercase tracking-wide">CRM & Analytics</span>
          <!-- 5.2 Title -->
          <h2 data-section="5.2" class="text-3xl font-heading font-bold mt-2 mb-4">Track Everything in One Place</h2>
          <!-- 5.3 Description -->
          <p data-section="5.3" class="text-gray-600 mb-6">See every lead, every call, every conversion. Our integrated dashboard gives you full visibility into your sales pipeline.</p>
          <!-- 5.4 Features -->
          <ul data-section="5.4" class="space-y-3 text-gray-700">
            <li class="flex items-start gap-2"><span class="text-secondary font-bold">✓</span> Real-time lead tracking</li>
            <li class="flex items-start gap-2"><span class="text-secondary font-bold">✓</span> Conversion analytics</li>
            <li class="flex items-start gap-2"><span class="text-secondary font-bold">✓</span> Call history & recordings</li>
            <li class="flex items-start gap-2"><span class="text-secondary font-bold">✓</span> ROI reporting</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 6: PRICING
       - 6.1 Section Title
       - 6.2 Subtitle
       - 6.3 Tier: Basic
       - 6.4 Tier: Pro
       - 6.5 Tier: Enterprise
       - 6.6 Add-on Note
       ============================================ -->
  <section id="pricing" data-section="6" class="py-20 bg-gray-100">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 6.1 Section Title -->
      <h2 data-section="6.1" class="text-4xl font-heading font-bold text-center mb-2">Simple, Transparent Pricing</h2>
      <!-- 6.2 Subtitle -->
      <p data-section="6.2" class="text-center text-gray-600 mb-12">No hidden fees. Cancel anytime.</p>
      <div class="grid md:grid-cols-3 gap-6">
        <!-- 6.3 Tier: Basic -->
        <div data-section="6.3" class="bg-white border border-gray-900 rounded-xl p-8">
          <h3 class="text-2xl font-bold mb-2">Basic Website</h3>
          <p class="text-4xl font-bold text-primary mb-1">$396</p>
          <p class="text-gray-500 text-sm mb-6">One-time setup</p>
          <ul class="space-y-3 mb-8 text-gray-700">
            <li>✓ 6 Pages</li>
            <li>✓ Mobile Responsive</li>
            <li>✓ Contact Form</li>
            <li>✓ Basic SEO</li>
          </ul>
          <a href="#contact" class="block text-center bg-gray-900 text-white py-3 rounded-lg hover:bg-gray-700 transition">Get Started</a>
        </div>
        <!-- 6.4 Tier: Pro -->
        <div data-section="6.4" class="bg-white border-2 border-primary rounded-xl p-8 shadow-xl relative">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-secondary text-white text-sm px-4 py-1 rounded-full">Most Popular</div>
          <h3 class="text-2xl font-bold mb-2">Pro Package</h3>
          <p class="text-4xl font-bold text-primary mb-1">$697</p>
          <p class="text-gray-500 text-sm mb-6">One-time + $99/mo</p>
          <ul class="space-y-3 mb-8 text-gray-700">
            <li>✓ Everything in Basic</li>
            <li>✓ 50 Leads/month</li>
            <li>✓ AI Caller Setup</li>
            <li>✓ CRM Integration</li>
            <li>✓ Analytics Dashboard</li>
          </ul>
          <a href="#contact" class="block text-center bg-primary text-white py-3 rounded-lg hover:bg-blue-700 transition">Get Started</a>
        </div>
        <!-- 6.5 Tier: Enterprise -->
        <div data-section="6.5" class="bg-white border border-gray-900 rounded-xl p-8">
          <h3 class="text-2xl font-bold mb-2">Enterprise</h3>
          <p class="text-4xl font-bold text-primary mb-1">Custom</p>
          <p class="text-gray-500 text-sm mb-6">Tailored solutions</p>
          <ul class="space-y-3 mb-8 text-gray-700">
            <li>✓ Unlimited Pages</li>
            <li>✓ Unlimited Leads</li>
            <li>✓ Dedicated AI Callers</li>
            <li>✓ White-label Options</li>
            <li>✓ Priority Support</li>
          </ul>
          <a href="#contact" class="block text-center bg-gray-900 text-white py-3 rounded-lg hover:bg-gray-700 transition">Contact Us</a>
        </div>
      </div>
      <!-- 6.6 Add-on Note -->
      <p data-section="6.6" class="text-center text-gray-500 mt-8">Add-on pages: +$69 each</p>
    </div>
  </section>

  <!-- ============================================
       SECTION 7: CUSTOMER STORIES (Blog-style Cards)
       - 7.1 Section Title
       - 7.2 Story Card 1
       - 7.3 Story Card 2
       - 7.4 Story Card 3
       - 7.5 Story Card 4
       ============================================ -->
  <section data-section="7" class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 7.1 Section Title -->
      <h2 data-section="7.1" class="text-4xl font-heading font-bold text-center mb-12">Customer Stories</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- 7.2 Story Card 1 -->
        <div data-section="7.2" class="bg-white border border-gray-900 rounded-xl overflow-hidden hover:shadow-lg transition">
          <div class="bg-gray-100 aspect-[4/3] flex items-center justify-center">
            <p class="text-gray-400 text-sm">[Customer Photo]</p>
          </div>
          <div class="p-4">
            <p class="text-sm text-primary font-semibold mb-1">Plumbing</p>
            <h3 class="font-bold text-gray-900">Mike's Plumbing Co.</h3>
            <p class="text-gray-600 text-sm mt-2">"Doubled our leads in 30 days"</p>
          </div>
        </div>
        <!-- 7.3 Story Card 2 -->
        <div data-section="7.3" class="bg-white border border-gray-900 rounded-xl overflow-hidden hover:shadow-lg transition">
          <div class="bg-gray-100 aspect-[4/3] flex items-center justify-center">
            <p class="text-gray-400 text-sm">[Customer Photo]</p>
          </div>
          <div class="p-4">
            <p class="text-sm text-primary font-semibold mb-1">HVAC</p>
            <h3 class="font-bold text-gray-900">CoolAir Solutions</h3>
            <p class="text-gray-600 text-sm mt-2">"AI caller books 15+ appointments weekly"</p>
          </div>
        </div>
        <!-- 7.4 Story Card 3 -->
        <div data-section="7.4" class="bg-white border border-gray-900 rounded-xl overflow-hidden hover:shadow-lg transition">
          <div class="bg-gray-100 aspect-[4/3] flex items-center justify-center">
            <p class="text-gray-400 text-sm">[Customer Photo]</p>
          </div>
          <div class="p-4">
            <p class="text-sm text-secondary font-semibold mb-1">Roofing</p>
            <h3 class="font-bold text-gray-900">TopShield Roofing</h3>
            <p class="text-gray-600 text-sm mt-2">"Best ROI we've ever seen on marketing"</p>
          </div>
        </div>
        <!-- 7.5 Story Card 4 -->
        <div data-section="7.5" class="bg-white border border-gray-900 rounded-xl overflow-hidden hover:shadow-lg transition">
          <div class="bg-gray-100 aspect-[4/3] flex items-center justify-center">
            <p class="text-gray-400 text-sm">[Customer Photo]</p>
          </div>
          <div class="p-4">
            <p class="text-sm text-primary font-semibold mb-1">Electrical</p>
            <h3 class="font-bold text-gray-900">Bright Spark Electric</h3>
            <p class="text-gray-600 text-sm mt-2">"Website brings in 20 calls per week"</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 8: CONTACT
       - 8.1 Section Title
       - 8.2 Subtitle
       - 8.3 Cal.com Booking Widget
       - 8.4 Contact Form
       ============================================ -->
  <section id="contact" data-section="8" class="py-20 bg-gray-100">
    <div class="max-w-4xl mx-auto px-4">
      <!-- 8.1 Section Title -->
      <h2 data-section="8.1" class="text-4xl font-heading font-bold text-center mb-2">Ready to Grow?</h2>
      <!-- 8.2 Subtitle -->
      <p data-section="8.2" class="text-center text-gray-600 mb-12">Book a free consultation or send us a message.</p>
      <div class="grid md:grid-cols-2 gap-6">
        <!-- 8.3 Cal.com Booking -->
        <div data-section="8.3" class="bg-white border border-gray-900 rounded-xl p-6">
          <h3 class="text-xl font-bold mb-4">Book a Call</h3>
          <p class="text-gray-600 mb-4">Schedule a 15-minute call to discuss your needs.</p>
          <div class="bg-gray-50 rounded-lg p-8 text-center border border-gray-200">
            <p class="text-gray-400">[Cal.com Booking Widget]</p>
          </div>
        </div>
        <!-- 8.4 Contact Form -->
        <div data-section="8.4" class="bg-white border border-gray-900 rounded-xl p-6">
          <h3 class="text-xl font-bold mb-4">Send a Message</h3>
          <form class="space-y-3">
            <input type="text" placeholder="Your Name" class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none">
            <input type="email" placeholder="Email Address" class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none">
            <input type="tel" placeholder="Phone Number" class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none">
            <select class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none">
              <option>Select Your Trade</option>
              <option>Plumber</option>
              <option>Electrician</option>
              <option>HVAC</option>
              <option>Roofer</option>
              <option>General Contractor</option>
              <option>Other</option>
            </select>
            <textarea placeholder="Tell us about your business..." rows="3" class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none"></textarea>
            <button type="submit" class="w-full bg-primary text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition">Send Message</button>
          </form>
        </div>
      </div>
    </div>
  </section>

</Layout>
