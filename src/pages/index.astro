---
import Layout from '../layouts/Layout.astro';
---

<Layout title="BuildRightPros - Grow Your Contracting Business">

  <!-- ============================================
       SECTION 1: HERO
       - 1.1 Headline
       - 1.2 Subheadline
       - 1.3 CTA Buttons
       ============================================ -->
  <section id="hero" data-section="1" class="min-h-screen flex items-center bg-gradient-to-br from-primary to-blue-800 text-white">
    <div class="max-w-6xl mx-auto px-4 py-20 text-center">
      <!-- 1.1 Headline -->
      <h1 data-section="1.1" class="text-5xl md:text-6xl font-heading font-bold mb-6">Grow Your Contracting Business</h1>
      <!-- 1.2 Subheadline -->
      <p data-section="1.2" class="text-xl md:text-2xl mb-8 text-blue-100">Websites, Leads, and AI-Powered Calling Solutions for Plumbers, Electricians, HVAC, Roofers & More</p>
      <!-- 1.3 CTA Buttons -->
      <div data-section="1.3" class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#pricing" class="bg-secondary text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-orange-600 transition">View Pricing</a>
        <a href="#contact" class="border-2 border-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-white hover:text-primary transition">Book a Call</a>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 2: SERVICES
       - 2.1 Section Title
       - 2.2 Card: Websites
       - 2.3 Card: Leads
       - 2.4 Card: AI Callers
       ============================================ -->
  <section id="services" data-section="2" class="py-20">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 2.1 Section Title -->
      <h2 data-section="2.1" class="text-4xl font-heading font-bold text-center mb-12">Our Services</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <!-- 2.2 Card: Websites -->
        <div data-section="2.2" class="bg-card p-8 rounded-xl shadow-lg">
          <div class="text-4xl mb-4">üåê</div>
          <h3 class="text-xl font-bold mb-3">Professional Websites</h3>
          <p class="text-gray-600">Custom-built sites that convert visitors into customers. Mobile-optimized with SEO built-in.</p>
        </div>
        <!-- 2.3 Card: Leads -->
        <div data-section="2.3" class="bg-card p-8 rounded-xl shadow-lg">
          <div class="text-4xl mb-4">üìà</div>
          <h3 class="text-xl font-bold mb-3">Lead Generation</h3>
          <p class="text-gray-600">Targeted leads in your service area. Qualified prospects ready to hire contractors.</p>
        </div>
        <!-- 2.4 Card: AI Callers -->
        <div data-section="2.4" class="bg-card p-8 rounded-xl shadow-lg">
          <div class="text-4xl mb-4">üìû</div>
          <h3 class="text-xl font-bold mb-3">AI Callers</h3>
          <p class="text-gray-600">24/7 AI-powered calling to follow up on leads, book appointments, and grow your business.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 3: PRICING
       - 3.1 Section Title
       - 3.2 Subtitle
       - 3.3 Tier: Basic ($396)
       - 3.4 Tier: Pro ($697)
       - 3.5 Tier: Enterprise
       - 3.6 Add-on Note
       ============================================ -->
  <section id="pricing" data-section="3" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 3.1 Section Title -->
      <h2 data-section="3.1" class="text-4xl font-heading font-bold text-center mb-4">Simple, Transparent Pricing</h2>
      <!-- 3.2 Subtitle -->
      <p data-section="3.2" class="text-center text-gray-600 mb-12">No hidden fees. Cancel anytime.</p>
      <div class="grid md:grid-cols-3 gap-8">
        <!-- 3.3 Tier: Basic -->
        <div data-section="3.3" class="bg-bglight p-8 rounded-xl border-2 border-gray-200">
          <h3 class="text-2xl font-bold mb-2">Basic Website</h3>
          <p class="text-4xl font-bold text-primary mb-4">$396</p>
          <p class="text-gray-600 mb-6">One-time setup</p>
          <ul class="space-y-3 mb-8">
            <li>‚úì 6 Pages (Home, About, Services, Contact, Gallery, Team)</li>
            <li>‚úì Mobile Responsive</li>
            <li>‚úì Contact Form</li>
            <li>‚úì Basic SEO</li>
          </ul>
          <a href="#contact" class="block text-center bg-primary text-white py-3 rounded-lg hover:bg-blue-700 transition">Get Started</a>
        </div>
        <!-- 3.4 Tier: Pro -->
        <div data-section="3.4" class="bg-primary text-white p-8 rounded-xl shadow-xl transform scale-105">
          <div class="text-sm bg-secondary inline-block px-3 py-1 rounded-full mb-4">Most Popular</div>
          <h3 class="text-2xl font-bold mb-2">Pro Package</h3>
          <p class="text-4xl font-bold mb-4">$697</p>
          <p class="text-blue-200 mb-6">One-time + $99/mo</p>
          <ul class="space-y-3 mb-8">
            <li>‚úì Everything in Basic</li>
            <li>‚úì 50 Leads/month</li>
            <li>‚úì AI Caller Setup</li>
            <li>‚úì CRM Integration</li>
            <li>‚úì Analytics Dashboard</li>
          </ul>
          <a href="#contact" class="block text-center bg-white text-primary py-3 rounded-lg hover:bg-gray-100 transition font-semibold">Get Started</a>
        </div>
        <!-- 3.5 Tier: Enterprise -->
        <div data-section="3.5" class="bg-bglight p-8 rounded-xl border-2 border-gray-200">
          <h3 class="text-2xl font-bold mb-2">Enterprise</h3>
          <p class="text-4xl font-bold text-primary mb-4">Custom</p>
          <p class="text-gray-600 mb-6">Tailored solutions</p>
          <ul class="space-y-3 mb-8">
            <li>‚úì Unlimited Pages</li>
            <li>‚úì Unlimited Leads</li>
            <li>‚úì Dedicated AI Callers</li>
            <li>‚úì White-label Options</li>
            <li>‚úì Priority Support</li>
          </ul>
          <a href="#contact" class="block text-center bg-primary text-white py-3 rounded-lg hover:bg-blue-700 transition">Contact Us</a>
        </div>
      </div>
      <!-- 3.6 Add-on Note -->
      <p data-section="3.6" class="text-center text-gray-500 mt-8">Add-on pages: +$69 each</p>
    </div>
  </section>

  <!-- ============================================
       SECTION 4: WEBSITE FEATURES
       - 4.1 Section Title
       - 4.2 Feature: Trade-Specific
       - 4.3 Feature: Mobile-First
       - 4.4 Feature: Fast Loading
       - 4.5 Demo Preview Image
       ============================================ -->
  <section id="website" data-section="4" class="py-20">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 4.1 Section Title -->
      <h2 data-section="4.1" class="text-4xl font-heading font-bold text-center mb-12">Website Features</h2>
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <!-- 4.2 Feature: Trade-Specific -->
          <div data-section="4.2" class="bg-card p-6 rounded-xl shadow-lg mb-6">
            <h3 class="text-xl font-bold mb-3">üé® Trade-Specific Designs</h3>
            <p class="text-gray-600">Choose from templates designed for plumbers, electricians, HVAC techs, roofers, and general contractors.</p>
          </div>
          <!-- 4.3 Feature: Mobile-First -->
          <div data-section="4.3" class="bg-card p-6 rounded-xl shadow-lg mb-6">
            <h3 class="text-xl font-bold mb-3">üì± Mobile-First</h3>
            <p class="text-gray-600">60% of your customers search on mobile. Our sites look perfect on every device.</p>
          </div>
          <!-- 4.4 Feature: Fast Loading -->
          <div data-section="4.4" class="bg-card p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-bold mb-3">‚ö° Fast Loading</h3>
            <p class="text-gray-600">Built with modern tech for lightning-fast load times. Better UX, better SEO.</p>
          </div>
        </div>
        <!-- 4.5 Demo Preview Image -->
        <div data-section="4.5" class="bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl p-8 aspect-video flex items-center justify-center">
          <p class="text-gray-500 text-lg">[Website Demo Preview]</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 5: LEADS
       - 5.1 Section Title
       - 5.2 Stats Grid (4 items)
       - 5.3 Process: Step 1
       - 5.4 Process: Step 2
       - 5.5 Process: Step 3
       ============================================ -->
  <section id="leads" data-section="5" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 5.1 Section Title -->
      <h2 data-section="5.1" class="text-4xl font-heading font-bold text-center mb-12">Lead Generation That Works</h2>
      <!-- 5.2 Stats Grid -->
      <div data-section="5.2" class="grid md:grid-cols-4 gap-6 text-center mb-12">
        <div class="bg-bglight p-6 rounded-xl">
          <p class="text-4xl font-bold text-primary">500+</p>
          <p class="text-gray-600">Leads Delivered</p>
        </div>
        <div class="bg-bglight p-6 rounded-xl">
          <p class="text-4xl font-bold text-primary">89%</p>
          <p class="text-gray-600">Contact Rate</p>
        </div>
        <div class="bg-bglight p-6 rounded-xl">
          <p class="text-4xl font-bold text-primary">24hr</p>
          <p class="text-gray-600">Lead Delivery</p>
        </div>
        <div class="bg-bglight p-6 rounded-xl">
          <p class="text-4xl font-bold text-primary">5x</p>
          <p class="text-gray-600">Avg ROI</p>
        </div>
      </div>
      <div class="bg-card p-8 rounded-xl shadow-lg">
        <h3 class="text-2xl font-bold mb-4">How Our Lead System Works</h3>
        <div class="grid md:grid-cols-3 gap-8">
          <!-- 5.3 Step 1 -->
          <div data-section="5.3">
            <div class="text-3xl font-bold text-secondary mb-2">1</div>
            <h4 class="font-bold mb-2">We Find Prospects</h4>
            <p class="text-gray-600">Using advanced data tools to find businesses in your area looking for your services.</p>
          </div>
          <!-- 5.4 Step 2 -->
          <div data-section="5.4">
            <div class="text-3xl font-bold text-secondary mb-2">2</div>
            <h4 class="font-bold mb-2">We Qualify Them</h4>
            <p class="text-gray-600">AI-powered screening ensures you only get leads worth your time.</p>
          </div>
          <!-- 5.5 Step 3 -->
          <div data-section="5.5">
            <div class="text-3xl font-bold text-secondary mb-2">3</div>
            <h4 class="font-bold mb-2">You Close Deals</h4>
            <p class="text-gray-600">Leads delivered to your CRM, ready for you to convert into customers.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 6: AI CALLERS
       - 6.1 Section Title
       - 6.2 Feature Box (left)
       - 6.3 Card: Natural Conversations
       - 6.4 Card: Full Reporting
       - 6.5 Card: CRM Integration
       ============================================ -->
  <section id="callers" data-section="6" class="py-20">
    <div class="max-w-6xl mx-auto px-4">
      <!-- 6.1 Section Title -->
      <h2 data-section="6.1" class="text-4xl font-heading font-bold text-center mb-12">AI-Powered Callers</h2>
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- 6.2 Feature Box -->
        <div data-section="6.2" class="bg-gradient-to-br from-primary to-blue-800 text-white p-8 rounded-xl">
          <h3 class="text-2xl font-bold mb-4">Never Miss a Lead Again</h3>
          <p class="mb-6">Our AI callers work 24/7 to:</p>
          <ul class="space-y-3">
            <li>‚úì Follow up on new leads within minutes</li>
            <li>‚úì Book appointments directly on your calendar</li>
            <li>‚úì Answer common questions about your services</li>
            <li>‚úì Qualify prospects before they reach you</li>
          </ul>
        </div>
        <div>
          <!-- 6.3 Card: Natural Conversations -->
          <div data-section="6.3" class="bg-card p-6 rounded-xl shadow-lg mb-6">
            <h4 class="font-bold mb-2">ü§ñ Natural Conversations</h4>
            <p class="text-gray-600">Powered by advanced AI that sounds human and handles objections naturally.</p>
          </div>
          <!-- 6.4 Card: Full Reporting -->
          <div data-section="6.4" class="bg-card p-6 rounded-xl shadow-lg mb-6">
            <h4 class="font-bold mb-2">üìä Full Reporting</h4>
            <p class="text-gray-600">See every call, every outcome, every booked appointment in your dashboard.</p>
          </div>
          <!-- 6.5 Card: CRM Integration -->
          <div data-section="6.5" class="bg-card p-6 rounded-xl shadow-lg">
            <h4 class="font-bold mb-2">üîó CRM Integration</h4>
            <p class="text-gray-600">Syncs with your existing tools. No double entry required.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       SECTION 7: CONTACT
       - 7.1 Section Title
       - 7.2 Subtitle
       - 7.3 Cal.com Booking Widget
       - 7.4 Contact Form
       ============================================ -->
  <section id="contact" data-section="7" class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <!-- 7.1 Section Title -->
      <h2 data-section="7.1" class="text-4xl font-heading font-bold text-center mb-4">Ready to Grow?</h2>
      <!-- 7.2 Subtitle -->
      <p data-section="7.2" class="text-center text-gray-600 mb-12">Book a free consultation or send us a message.</p>
      <div class="grid md:grid-cols-2 gap-8">
        <!-- 7.3 Cal.com Booking -->
        <div data-section="7.3" class="bg-bglight p-8 rounded-xl">
          <h3 class="text-xl font-bold mb-4">Book a Call</h3>
          <p class="text-gray-600 mb-4">Schedule a 15-minute call to discuss your needs.</p>
          <!-- Cal.com embed placeholder -->
          <div class="bg-gray-200 rounded-lg p-8 text-center">
            <p class="text-gray-500">[Cal.com Booking Widget]</p>
          </div>
        </div>
        <!-- 7.4 Contact Form -->
        <div data-section="7.4" class="bg-bglight p-8 rounded-xl">
          <h3 class="text-xl font-bold mb-4">Send a Message</h3>
          <form class="space-y-4">
            <input type="text" placeholder="Your Name" class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none">
            <input type="email" placeholder="Email Address" class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none">
            <input type="tel" placeholder="Phone Number" class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none">
            <select class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none">
              <option>Select Your Trade</option>
              <option>Plumber</option>
              <option>Electrician</option>
              <option>HVAC</option>
              <option>Roofer</option>
              <option>General Contractor</option>
              <option>Other</option>
            </select>
            <textarea placeholder="Tell us about your business..." rows="4" class="w-full p-3 rounded-lg border border-gray-300 focus:border-primary focus:outline-none"></textarea>
            <button type="submit" class="w-full bg-secondary text-white py-3 rounded-lg font-semibold hover:bg-orange-600 transition">Send Message</button>
          </form>
        </div>
      </div>
    </div>
  </section>

</Layout>
